# don't forget to load mod_rewrite in apache-config!
# $Id: .htaccess-dist,v 1.5 2005/10/11 08:35:35 chaot Exp $
<IfModule mod_rewrite.c>
  RewriteEngine On
  #RewriteBase /

  # unbedingt benötigte ausnahmen
  RewriteRule ^basic.* - [L] 			
  RewriteRule ^conf.* - [L] 			
  RewriteRule ^css.* - [L] 			
  RewriteRule ^file.* - [L] 			
  RewriteRule ^images.* - [L] 			
  RewriteRule ^modules.* - [L] 			
  RewriteRule ^templates.* - [L] 			
  
  RewriteRule ^robots.txt - [L] 			
  
  # zusaetzliche eigene ausnahmen
  #RewriteRule ^my.* - [L] 			

  # entweder aufruf über index.php
  #RewriteRule ^index.php - [L]
  #RewriteRule ^.+ basic/main.php [T=application/x-httpd-php]

  # oder betrieb ohne index.php
  RewriteRule ^.* ./basic/main.php [T=application/x-httpd-php]
</IfModule>
